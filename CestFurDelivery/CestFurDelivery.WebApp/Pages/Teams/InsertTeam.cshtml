@page
@model CestFurDelivery.WebApp.Pages.Teams.InsertTeamModel
@{
}
<h1 class="text-center">Insert a new team</h1>
<hr />
<div class="container">
	<form method="post">
	<div class="row justify-content-center mt-4">
		<div class="col-4">
			<div class="form-group mt-2">
				<label asp-for="Team.Name"></label>
				<input asp-for="Team.Name" class="form-control">
				<span class="text-danger" asp-validation-for="Team.Name"></span>
			</div>
			<div class="form-group mt-2">
				<label asp-for="Team.Description"></label>
				<textarea asp-for="Team.Description" class="form-control"></textarea>
				<span class="text-danger" asp-validation-for="Team.Description"></span>
			</div>

			<div class="mt-5">
				<button type="submit" class="btn btn-success w-100 btn-lg text-uppercase">Save&#128230;</button>
			</div>
			<div class="mt-3">
				<a type="button" class="btn btn-primary w-100 btn-lg text-uppercase" asp-page="/Teams/ShowTeams">&#11013;Teams</a>
			</div>
		</div>
	</div>
	</form>
</div>


